<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <title>Page d'accueil</title>
</head>
<body>
    <h1>Bienvenue sur la page d'accueil</h1>

    <p id="user-info">Chargement des donn√©es utilisateur...</p>
    <button id="logout">D√©connexion</button>

    <h2>üìä Mes statistiques de d√©penses</h2>
    <div id="stats-total">Chargement...</div>
    <div id="stats-by-category"></div>
    <div id="stats-by-month"></div>
    <div id="stats-by-group"></div>
    <hr>


    <h2>Cr√©er un nouveau groupe</h2>
    <input type="text" id="new-group-name" placeholder="Nom du groupe">
    <button id="create-group">Cr√©er le groupe</button>
    <hr>


    <h2>Mes groupes</h2>
    <ul id="group-list">Chargement...</ul>

    <script>
    const token = localStorage.getItem('jwt');

    if (!token) {
        window.location.href = '/login';
    } else {
        fetch('http://localhost:49162/api/profile', {
            method: 'GET',
            headers: {
                'Authorization': 'Bearer ' + token
            }
        }).then(async res => {
            if (res.ok) {
                const user = await res.json();
                document.getElementById('user-info').textContent =
                    `Connect√© en tant que : ${user.username} (${user.email})`;
                loadGroups();
                loadStatistics();

            } else {
                localStorage.removeItem('jwt');
                window.location.href = '/login';
            }
        }).catch(() => {
            document.getElementById('user-info').textContent = 'Impossible de charger les donn√©es utilisateur.';
        });
    }

    function loadGroups() {
        fetch('http://localhost:49162/api/my-groups', {
            method: 'GET',
            headers: {
                'Authorization': 'Bearer ' + token
            }
        }).then(res => res.json())
          .then(groups => {
            const list = document.getElementById('group-list');
            list.innerHTML = '';

            if (groups.length === 0) {
                list.textContent = 'Aucun groupe trouv√©.';
                return;
            }

            groups.forEach(group => {
                const li = document.createElement('li');
                li.innerHTML = `
                    <strong>${group.name}</strong> (ID: ${group.id})<br>
                    <button onclick="window.location.href='/group/${group.id}'">Voir</button>
                    <button onclick="deleteGroup(${group.id})">Supprimer</button>
                    <button onclick="viewMembers(${group.id})">Voir les membres</button>
                    <button onclick="checkRole(${group.id})">Mon r√¥le</button>
                    <div id="group-${group.id}-members"></div>
                    <div id="group-${group.id}-role"></div>
                    <hr>
                `;
                list.appendChild(li);
            });
        }).catch(() => {
            document.getElementById('group-list').textContent = 'Erreur de chargement des groupes.';
        });
    }

    function deleteGroup(groupId) {
        if (!confirm("Supprimer ce groupe ?")) return;

        fetch(`http://localhost:49162/api/groups/${groupId}`, {
            method: 'DELETE',
            headers: {
                'Authorization': 'Bearer ' + token
            }
        }).then(res => {
            if (res.ok) {
                alert("Groupe supprim√©");
                loadGroups();
            } else {
                alert("Erreur lors de la suppression");
            }
        });
    }

    function viewMembers(groupId) {
        fetch(`http://localhost:49162/api/groups/${groupId}/members`, {
            method: 'GET',
            headers: {
                'Authorization': 'Bearer ' + token
            }
        }).then(res => res.json())
          .then(members => {
            const container = document.getElementById(`group-${groupId}-members`);
            container.innerHTML = '<strong>Membres :</strong><ul>' +
                members.map(m => `<li>${m.username} (${m.email})</li>`).join('') +
                '</ul>';
        }).catch(() => {
            alert("Erreur de r√©cup√©ration des membres.");
        });
    }

    function checkRole(groupId) {
        fetch(`http://localhost:49162/api/groups/${groupId}/role`, {
            method: 'GET',
            headers: {
                'Authorization': 'Bearer ' + token
            }
        }).then(res => res.json())
          .then(data => {
            const container = document.getElementById(`group-${groupId}-role`);
            container.innerHTML = `<strong>R√¥le :</strong> ${data.role}`;
        }).catch(() => {
            alert("Erreur lors de la r√©cup√©ration du r√¥le.");
        });
    }

    // ‚ûï Cr√©er un groupe
    document.getElementById('create-group').addEventListener('click', () => {
        const groupName = document.getElementById('new-group-name').value.trim();
        if (!groupName) {
            alert("Le nom du groupe est requis.");
            return;
        }

        fetch('http://localhost:49162/api/groups', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
                'Authorization': 'Bearer ' + token
            },
            body: JSON.stringify({ name: groupName })
        }).then(async res => {
            if (res.ok) {
                alert("Groupe cr√©√© !");
                document.getElementById('new-group-name').value = '';
                loadGroups();
            } else {
                const error = await res.json();
                alert("Erreur : " + (error.error || "Impossible de cr√©er le groupe."));
            }
        }).catch(() => {
            alert("Erreur r√©seau");
        });
    });

    // D√©connexion
    document.getElementById('logout').addEventListener('click', () => {
        localStorage.removeItem('jwt');
        window.location.href = '/login';
    });

    function loadStatistics() {
        fetch('http://localhost:49162/api/statistics', {
            headers: {
                'Authorization': 'Bearer ' + token
            }
        })
        .then(res => res.json())
        .then(stats => {
            // Total
            document.getElementById('stats-total').innerHTML = `<strong>Total :</strong> ${parseFloat(stats.total).toFixed(2)} ‚Ç¨`;

            // Par cat√©gorie
            const catHtml = Object.entries(stats.byCategory).map(
                ([cat, val]) => `<li>${cat} : ${parseFloat(val).toFixed(2)} ‚Ç¨</li>`
            ).join('');
            document.getElementById('stats-by-category').innerHTML = `<h4>Par cat√©gorie :</h4><ul>${catHtml}</ul>`;

            // Par mois
            const monthHtml = Object.entries(stats.byMonth).map(
                ([month, val]) => `<li>${month} : ${parseFloat(val).toFixed(2)} ‚Ç¨</li>`
            ).join('');
            document.getElementById('stats-by-month').innerHTML = `<h4>Par mois :</h4><ul>${monthHtml}</ul>`;
           
            // Par groupe
            const groupHtml = Object.entries(stats.byGroup).map(
                ([group, val]) => `<li>${group} : ${parseFloat(val).toFixed(2)} ‚Ç¨</li>`
            ).join('');
            document.getElementById('stats-by-group').innerHTML = `<h4>Par groupe :</h4><ul>${groupHtml}</ul>`;

      
        })
        .catch(() => {
            document.getElementById('stats-total').textContent = 'Erreur de chargement des statistiques.';
        });
    }


</script>

</body>
</html>
